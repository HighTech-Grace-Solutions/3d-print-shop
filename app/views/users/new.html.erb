<!DOCTYPE html>
<div class="page-content">
  <div class="panel">
    <div class="panel-header">
      <p>สมัครใช้บริการ</p>
    </div>
    <div class="panel-content">
      <%= form_for @user, url: signup_path do |f| %>
        <%= f.label :email, 'e-mail' %></br>
        <%= f.text_field :email %></br></br>
        <%= f.label :username %></br>
        <%= f.text_field :username %></br></br>
        <%= f.label :password %></br>
        <%= f.password_field :password %></br></br>
        <% if flash[:registration_failed] %>
          <p style="color:red; padding-bottom:1rem;"><%= flash[:registration_failed] %></p>
        <% end %>
        <%= f.submit "Sign up", class: "btn-small" %>
      <% end %>
    </div>
  </div>
</div>
